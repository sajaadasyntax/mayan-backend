# Database Configuration
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://username:password@localhost:5432/mayan_shop"

# JWT Configuration
# Secret key for signing JWT tokens (use a strong random string in production)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Server Configuration
# Port on which the backend server will run
PORT=5000

# Frontend Configuration
# URL of the frontend application (used for CORS)
FRONTEND_URL="http://localhost:3000"

# Environment
# Set to 'development' or 'production'
NODE_ENV="development"